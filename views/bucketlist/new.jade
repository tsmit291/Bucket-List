block content
  .topnav
    .topbar
      p
        a(href="/auth/logout") Logout
    .topbar
      p
        a(href="/bucketlists/#{cookieId}") Profile
    .topbar
      p
        a(href="#") Chat
    .topbar
      p
        a(href="/bucketlists") Discover
    .createheader
      h1 Throw it on the bucket list
    form(method='post', action='/bucketlists/#{userId}/items')
      .formtitle
        input(id="formtitle" type="text" placeholder="Title" name="title")
        br
        textarea(placeholder="description" name="description")
        br 
      .imageside
        h1 Images
        .formimages  
