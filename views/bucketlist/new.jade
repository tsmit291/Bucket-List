          input(type="text" placeholder="resource url" name="resourceUrlA")
          br
          
          input(type="text" placeholder="resource name" name="resourceB")
          input(type="text" placeholder="resource url" name="resourceUrlB")
          br
          
          input(type="text" placeholder="resource name" name="resourceC")
