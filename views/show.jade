extends layout

block content
  div.profile
    header #{user.display_name}'s Bucket List
    img(src= '#')
    -if (user.bio)
      p #{user.bio}
  div
    for item in bucketlists
      h2= item.title
      img(src= '#')
      p= item.description
      p Resources
      if item.resourceA
        a(href= item.resourceUrlA) #{item.resourceA}
      br
      if item.resourceB
        a(href= item.resourceUrlB) #{item.resourceB}
      br
      if item.resourceC
        a(href= item.resourceUrlC) #{item.resourceC}
      if auth
        a(href= '/bucketlists/#{user.id}/items/'+item.id+'/edit') Edit
        a(href= '/bucketlists/#{user.id}/items/'+item.id+'/delete') Delete
  -if (bucketlists.length < 10 && auth)
    a(href='/bucketlists/#{user.id}/new') Add List Item 
